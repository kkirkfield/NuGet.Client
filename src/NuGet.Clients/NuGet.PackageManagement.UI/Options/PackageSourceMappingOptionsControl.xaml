<UserControl x:Class="NuGet.Options.PackageSourceMappingOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NuGet.Options"
             xmlns:vsui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  <Grid Margin="12">
    
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="48"/>
    </Grid.RowDefinitions>

    <ListBox Name="packageList" ItemsSource="{Binding SourceMappingsCollection}" Grid.Row="0" Margin="12,0,12,0" >
      <!--<DataTemplate>
        <StackPanel Orientation="Horizontal">
          <Label Content="{Binding ID}"/>
        </StackPanel>
      </DataTemplate> -->
     
    </ListBox>



    <Grid Grid.Row="1">

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="101"/>
        <ColumnDefinition Width="89"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="101"/>
      </Grid.ColumnDefinitions>

      <Button Grid.Column="0" Width="86" Height="24" Margin = "12,0,0,12" Command="{Binding ShowButtonCommand}">Add</Button>

      <Button Grid.Column="1" Width="86" Height="24" Margin = "3,0,0,12" Command="{Binding RemoveButtonCommand}">Remove</Button>

      <Button  Grid.Column="3" Width="86" Height="24" Margin = "0,0,12,12" Command="{Binding ClearButtonCommand}">Clear</Button>


    </Grid>







    <Popup Name="MyPopup"
              
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               AllowsTransparency="True"
               >

      <Grid  Height="304" Width="456" Background="White">

        <Grid.RowDefinitions>
          <RowDefinition Height="30"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="36"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
          <Grid Name="TitleGrid"  >
            <Grid.ColumnDefinitions>
              <ColumnDefinition  Width="*" ></ColumnDefinition>
              <ColumnDefinition Width="50" ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock x:Uid="TitleTextBlock"
                           Grid.Column="0"
                           Text="Add New Package Namespace"
                           Margin="12,12,0,0"/>


          </Grid>


        </StackPanel>

        <StackPanel Grid.Row="1">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition  Height="36"/>
              <RowDefinition  Height="*"/>
              <RowDefinition Height="36"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" Name="packageID"  Margin="12,0,12,6">
              Add valid namespace
            </TextBox>


            <StackPanel Orientation="Vertical"  Grid.Row="1">

              <ListView Name="sourcesListBox" ItemsSource="{Binding SourcesCollection}" Margin="12,0,12,12" Height="190">


                <ListView.View>
                  <GridView>
                    <!-- checkbox column -->
                    <GridViewColumn>



                      <GridViewColumn.CellTemplate>
                        <DataTemplate>
                          <CheckBox
                  IsTabStop="False"
                  IsChecked="{Binding Path=IsChecked, Mode=TwoWay}"/>
                        </DataTemplate>
                      </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- the project column -->
                    <GridViewColumn x:Name="_projectColumn">
                      <GridViewColumnHeader/>
                      <GridViewColumn.CellTemplate>
                        <DataTemplate>
                          <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Text="{Binding SourceInfo.Name}" />
                          </StackPanel>
                        </DataTemplate>
                      </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                  </GridView>
                </ListView.View>
              </ListView>
            </StackPanel>
          </Grid>
        </StackPanel>



        <Grid Grid.Row="2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="190"/>
          </Grid.ColumnDefinitions>
          <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right"  Grid.Column="1">
            <Button Name="AddCloud" Height="24" Width="86" Content="_Add"  Command="{Binding AddButtonCommand}" Margin="0,0,3,12"/>
            <Button Name="CancelClose" Height="24" Width="86"  Command ="{Binding HideButtonCommand}" Margin="3,0,12,12">
              Close
            </Button>
          </StackPanel>
        </Grid>
        
     
          
      </Grid>
    </Popup>
  </Grid>
</UserControl>
